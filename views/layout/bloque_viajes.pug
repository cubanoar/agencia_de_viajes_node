div(class="mx-2 md:flex gap-4 md:flex-wrap md:items-center md:justify-center")
            each viaje in viajes 
                div(class="md:w-1/4 lg:w-1/5 border hover:scale-105 hover:shadow-lg p-1 rounded bg-white m-2")
                    h2(class="font-bold text-2xl  text-cyan-600") #{viaje.titulo}
                    img(class="px-0" src=`/img/destinos_${viaje.imagen}.jpg`, alt="imagen_destino")
                    div(class='w-full')
                        p
                            span(class="font-semibold text-cyan-600") Ida:  
                            | #{viaje.fecha_ida}
                        p
                            span(class="font-semibold text-cyan-600") Vuelta: 
                            | #{viaje.fecha_vuelta}                     
                        p
                            span(class="font-semibold text-cyan-600") Disponibles: 
                            | #{viaje.disponibles}
                    p(class='mt-4') #{viaje.descripcion.substr(0,100)}...
                    a(class="mt-2 block w-full bg-red-600 text-white text-center px-2 py-1 rounded" href=`viajes/${viaje.slug}`, target="_blank", rel="noopener noreferrer")
                        button Info